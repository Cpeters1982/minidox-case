################################################################################
SIDES = right left
PARTS = case top
FEATURES ?=

################################################################################
SRC = minidox-case.scad
DIR = stls

################################################################################
# $1: Side.
# $2: Part.
define STL
all: ${DIR}/${2}/${2}-${1}.stl
${DIR}/${2}/${2}-${1}.stl: ${SRC}
	@ mkdir -p `dirname $$@`
	openscad -o $$@ -D print_side='"${1}"' -D print_part='"${2}"' ${SRC}
endef

################################################################################
$(foreach p,${PARTS},$(foreach s,${SIDES},$(eval $(call STL,${s},${p}))))
